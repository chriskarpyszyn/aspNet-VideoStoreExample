@model VideoStoreExample.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<li>Genre: @Model.Genres.Genre</li>
@if (Model.ReleaseDate.HasValue)
{
    <li>Release Date: @Model.ReleaseDate.Value.ToString("D")</li>
}
<li>Date Added: @Model.DateAdded.ToString("D")</li>
<li>Number in Stock: @Model.NumberInStock</li>

