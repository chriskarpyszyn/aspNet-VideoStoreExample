@model IEnumerable<VideoStoreExample.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>



@if (!Model.Any())
{
    <p>We have no movies</p>
}
else
{
    <table class="table table-hover table-bordered">
        <thead>
        <tr>
            <th>Movies</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Details", "Movies", new {id = movie.Id }, null)</td>
                <td>@movie.Genres.Genre</td>
            </tr>
        }
        </tbody>
    </table>
}

